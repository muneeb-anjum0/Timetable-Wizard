# Backend Environment Variables Template
# Copy this to .env and fill in your actual values

# Supabase Configuration (Required)
SUPABASE_URL=your_supabase_project_url
SUPABASE_SERVICE_KEY=your_supabase_service_role_key

# Gmail API Configuration (Optional - defaults provided)
GMAIL_QUERY_BASE=subject:(Time Table OR timetable OR "time table") newer_than:2d
TZ=Asia/Karachi
CHECK_HOUR_LOCAL=20
CHECK_MINUTE_LOCAL=0
NEXT_DAY_AVAILABLE_HOUR=17
NEWER_THAN_DAYS=2
MIN_LINE_LENGTH=15
MAX_RESULTS_PER_SEMESTER=50
DEBUG_PARSING=false

# Allowed Semesters (Optional - can be managed via UI)
ALLOWED_SEMESTERS=

# Production Configuration
PORT=5000
FLASK_ENV=production
PYTHONPATH=/app