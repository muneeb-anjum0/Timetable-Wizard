# Timezone (used by the scheduler)
TZ=Asia/Karachi

# Comma-separated semesters the student cares about
# Examples:
# Single semester: ALLOWED_SEMESTERS=BS (SE) - 5C
# Multiple semesters: ALLOWED_SEMESTERS=BS (SE) - 5C, BS (CS) - 7A, MS (CS) - 1B
# Mixed formats: ALLOWED_SEMESTERS=5C, 7A, BS (SE) - 3B
ALLOWED_SEMESTERS=BS (SE) - 5C

# Gmail search query base; we will add day-specific logic in code later
GMAIL_QUERY_BASE=subject:("Class Schedule" OR schedule) in:inbox

# When to check (local time, 24h)
CHECK_HOUR_LOCAL=23
CHECK_MINUTE_LOCAL=0

# How many days back to search for emails
NEWER_THAN_DAYS=2

# Parsing controls (optional)
MIN_LINE_LENGTH=15
MAX_RESULTS_PER_SEMESTER=50
DEBUG_PARSING=false